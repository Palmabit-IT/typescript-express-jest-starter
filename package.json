{
  "name": "typescript-express-jest-starter",
  "version": "0.0.1",
  "description": "Typescript Express Jest Starter",
  "main": "index.js",
  "scripts": {
    "start": "node --inspect -r ts-node/register index.ts",
    "dev": "nodemon",
    "test": "jest --env=node --coverage",
    "test:watch": "jest --watch"
  },
  "author": "Fleetmatica srl",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "celebrate": "^8.0.2",
    "compression": "^1.7.4",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "helmet": "^3.20.1",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.38",
    "@types/jest": "^23.3.14",
    "@types/morgan": "^1.7.37",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^2.9.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": true
  }
}
